{
  "name": "inventariando",
  "private": true,
  "version": "1.8.21",
  "type": "module",
  "description": "Gesti√≥n de inventario y POS inteligente para PyMEs argentinas. PWA con IA integrada.",
  "author": "Leonardo Esteves",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LEO-UNAHUR/Inventariando.git"
  },
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "build": "npm run build:web && npm run build:android",
    "build:web": "vite build",
    "build:web:pages": "vite build --mode pages",
    "build:android": "npm run build:web && npx cap sync android && node scripts/build-android.js",
    "preview": "vite preview",
    "preview:host": "vite preview --host",
    "cap:add": "npx cap add android",
    "cap:sync": "npx cap sync",
    "cap:open": "npx cap open android",
    "cap:run": "npx cap run android",
    "beta": "node scripts/trigger-beta.js",
    "release": "node scripts/trigger-release.js",
    "release:build": "npm run build:android",
    "release:beta": "node scripts/release-auto.js beta",
    "release:stable": "node scripts/release-auto.js stable",
    "release:dispatch": "node scripts/release-auto.js dispatch",
    "update:copilot-instructions": "node scripts/update-copilot-instructions.js",
    "test": "vitest",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@google/genai": "^1.33.0",
    "html5-qrcode": "2.3.8",
    "jspdf": "^3.0.4",
    "lucide-react": "^0.561.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "recharts": "^3.5.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.13",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "4.0.16",
    "vite-plugin-pwa": "^1.2.0",
    "eslint": "^8.48.0",
    "prettier": "^2.8.8",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^9.0.0",
    "lint-staged": "16.2.7"
  }
}
